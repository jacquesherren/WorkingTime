<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Layout_Row_Worker_main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_horizontal_margin">

    <RelativeLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:layout_height="64dp">

        <!--<TextView
            android:id="@+id/tv_date"
            android:layout_width="84dp"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:textStyle="normal"
            tools:text="31.10.2016" />-->

        <TextView
            android:id="@+id/tv_duration"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:textSize="@dimen/text_size_big"
            android:text="24"/>

        <ImageView
            android:id="@+id/image_company"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/ic_business_black_24dp"/>

        <TextView
            android:id="@+id/tv_company_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/image_company"
            android:layout_toRightOf="@+id/image_company"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:textStyle="normal"
            android:textColor="@android:color/black"
            tools:text="Company name" />


        <ImageView
            android:id="@+id/image_activity"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_alignLeft="@+id/image_company"
            android:layout_below="@+id/image_company"
            android:src="@drawable/ic_view_list_black_24dp"/>

        <TextView
            android:id="@+id/tv_activity_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/image_activity"
            android:layout_toRightOf="@+id/image_activity"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:textStyle="normal"
            android:textColor="@android:color/black"
            tools:text="Activity name" />

        <ImageView
            android:id="@+id/image_worker"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_alignLeft="@+id/image_company"
            android:layout_below="@+id/image_activity"
            android:src="@drawable/ic_person_black_24dp"/>
        <TextView
            android:id="@+id/tv_worker_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/image_worker"
            android:layout_toRightOf="@+id/image_worker"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:textStyle="normal"
            android:textColor="@android:color/black"
            tools:text="Firstname Lastname" />
        <ToggleButton
            android:id="@+id/btn_start"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:layout_alignLeft="@id/tv_duration"
            android:layout_centerVertical="true"
            android:drawableBottom="@color/colorAccent"
            android:textOff="@string/btn_start"/>
    </RelativeLayout>
</LinearLayout>
