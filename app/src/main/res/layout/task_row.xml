<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Layout_Row_Worker_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_horizontal_margin">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin">

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            tools:text="31.10.2016" />

        <TextView
            android:id="@+id/tv_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tv_worker_name"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:textColor="@android:color/black"
            android:textSize="@dimen/text_size_big"
            android:textStyle="bold"
            tools:text="24h00" />

        <TextView
            android:id="@+id/tv_company_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tv_date"
            tools:text="Company : " />

        <TextView
            android:id="@+id/tv_company_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tv_company_name"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            tools:text="Company name" />

        <TextView
            android:id="@+id/tv_activity_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tv_company_name"
            android:layout_below="@+id/tv_company_name"
            tools:text="Activity : " />

        <TextView
            android:id="@+id/tv_activity_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_company_value"
            android:layout_toRightOf="@+id/tv_company_name"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            tools:text="Activity name" />

        <TextView
            android:id="@+id/tv_worker_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tv_activity_name"
            android:layout_below="@+id/tv_activity_name"
            tools:text="Worker : " />

        <TextView
            android:id="@+id/tv_worker_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_activity_value"
            android:layout_toRightOf="@+id/tv_company_name"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            tools:text="Firstname Lastname" />

    </RelativeLayout>
</LinearLayout>